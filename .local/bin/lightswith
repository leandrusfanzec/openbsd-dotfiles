#!/bin/sh

id="$(pgrep cwm)"

# Para los dem√°s terminales:
# xrdb /home/leandrus/.config/nightxresources ;
# Para alacritty:
sed -i -e "s/monokai_charcoal/github_light/" $HOME/.config/alacritty/alacritty.yml 

xsetroot -bitmap $HOME/.config/athemes/bitD 

